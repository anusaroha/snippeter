<h1>Code Snippets</h1>
<%= form_for @snippet do |f| %>
  <p>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
